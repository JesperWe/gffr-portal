name: CD/CI for PPI VM

on:
  push:
    branches:
      - master

jobs:
  deploy-stage:
    name: Deploy to localhost
    runs-on: [self-hosted]

    steps:
      - uses: actions/checkout@master

      - name: Install SSH key
        run: echo $SSH_KEY | base64 --decode  > ./cf_rsa
        env:
          SSH_KEY: ${{ secrets.VM_SSH_KEY }}

      - name: Build
        run: |
            pwd
            id
            cd /home/jmx/gffr-backend
            git pull
            yarn install
            pm2 restart gffr-backend
